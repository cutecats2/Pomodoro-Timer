{
  "name": "cat-pomodoro-timer",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",

  "main": "electron/main.js",

  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },

  "scripts": {
    "start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron": "electron .",
    "dist": "npm run react-build && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },

  "build": {
    "appId": "com.catpomodorotimer.app",
    "productName": "Cat Pomodoro",

    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json",
      "public/preload.js"
    ],

    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },

    "win": {
      "target": "nsis", 
      "icon": "src/assets/icon.ico"
    
    },

    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.icns"
    },

    "linux": {
      "target": "AppImage"
    }
  },

  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },

  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },

  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  }
}
